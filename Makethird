# --- cURL ---

ifeq ($(USE_SYSTEM_CURL),yes)
  ifeq ($(HAVE_SYS_CURL),yes)
    HAVE_CURL := yes
    CURL_CFLAGS := $(SYS_CURL_CFLAGS) -DHAVE_CURL
    CURL_LIBS := $(SYS_CURL_LIBS)
  endif
endif

